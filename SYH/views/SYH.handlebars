<header>
        <i class="fa-solid fa-bars"></i>
        <div class="container">
            <i class="fa-solid fa-s"></i>
            <i class="fa-solid fa-y"></i>
            <i class="fa-solid fa-h"></i>
            <img src="/public/images/logo.png" alt="" srcset="">
        </div>
